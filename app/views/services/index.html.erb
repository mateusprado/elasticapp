<%= form_tag services_path, method: :get do %>
  <p>
    <%= text_field_tag :query, params[:query] %>
    <%= submit_tag "Search", name: nil %>
  </p>
<% end %>

<% @services.each do |service| %>
  <h2>Service <%= service.id %></h2>
  <p><%= service.name %></p>
  <p>Amount: $<%= service.amount %></p>
  <hr/>
<% end %>
  